<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp" class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form method="post" action="/account/reset">
                    <%- include('./includes/messages/validationMessages.ejs')  %>
                        <div class="form-outline mb-4">
                            <label class="form-label" for="userName"> رمز عبور جدید</label>
                            <input type="text" id="pass" class="form-control form-control-lg" placeholder="رمز عبور جدید وارد نمایید" autocomplete="true" autofocus name="pass" />
                        </div>
                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="email">تکرار رمز عبور جدید</label>
                            <input type="text" id="conpass" class="form-control form-control-lg" placeholder="رمز عبور عبور خود را تکرار کنید " autocomplete="true" name="conpass" />
                        </div>
                        <div class="text-center text-lg-end mt-4 pt-2">
                            <button type="submit" class="btn btn-primary btn-lg" style="padding-left: 2.5rem; padding-right: 2.5rem;">ثبت رمز جدید</button>
                        </div>

                </form>
            </div>
        </div>
    </div>

    </div>
</section>